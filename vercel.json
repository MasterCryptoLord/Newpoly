{
  "version": 2,
  "rewrites": [
    {
      "source": "/404",
      "destination": "/404.html"
    },
    {
      "source": "/:path+/index",
      "destination": "/:path+/index.html"
    },
    {
      "source": "/:path+/",
      "destination": "/:path+/index.html"
    },
    {
      "source": "/:path+",
      "destination": "/:path+.html"
    }
  ],
  "redirects": [
    {
      "source": "/:path+.html",
      "destination": "/:path+",
      "statusCode": 301
    }
  ]
}
